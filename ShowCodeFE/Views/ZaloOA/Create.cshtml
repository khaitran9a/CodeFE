@using Nop.Web.Areas.CRM.Models.Zalo
@model ZaloAccountModel
@{
    //page title
    ViewBag.PageTitle = "Thêm mới tài khoản ZaloOA";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("CRM.ZaloOA.Account");
}

<form asp-controller="ZaloAccount" asp-action="Create" method="post" id="addressattribute-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Thêm mới tài khoản OA
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Address.AddressAttributes.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.AddressAttributeDetailsButtons })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>